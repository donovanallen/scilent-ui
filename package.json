{
  "name": "@scilent/scilent-ui",
  "version": "1.0.0",
  "author": "Scilent Digital <hello@scilent.digital> (https://scilent.digital)",
  "description": "A component and utility library for music-based applications and UIs",
  "keywords": [
    "music",
    "ui",
    "components",
    "react",
    "typescript"
  ],
  "license": "MIT",
  "packageManager": "pnpm@10.5.2",
  "engines": {
    "node": ">=23.0.0"
  },
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo watch dev --continue",
    "dev:next": "turbo watch dev -F @scilent-ui/core...",
    "format": "turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "storybook": "turbo run storybook",
    "build-storybook": "turbo run build-storybook",
    "docs:dev": "turbo run docs:dev",
    "docs:build": "turbo run docs:build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "prepare": "npx husky",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "@commitlint/types": "^19.5.0",
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.21.0",
    "@storybook/addon-essentials": "^8.6.4",
    "@storybook/addon-interactions": "^8.6.4",
    "@storybook/addon-links": "^8.6.4",
    "@storybook/blocks": "^8.6.4",
    "@storybook/builder-vite": "^8.6.4",
    "@storybook/react": "^8.6.4",
    "@storybook/react-vite": "^8.6.4",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "eslint": "catalog:",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "globals": "^14.0.0",
    "husky": "^9.0.11",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jiti": "^2.4.2",
    "lint-staged": "^15.4.3",
    "prettier": "catalog:",
    "ts-jest": "^29.1.2",
    "turbo": "^2.0.0",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:",
    "vite": "^6.2.0"
  }
}
