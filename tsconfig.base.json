{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "declaration": true,
    "sourceMap": true,
    "paths": {
      "@scilent/core": ["./packages/core/src"],
      "@scilent/core/*": ["./packages/core/src/*"],
      "@scilent/icons": ["./packages/icons/src"],
      "@scilent/icons/*": ["./packages/icons/src/*"]
    }
  }
}
